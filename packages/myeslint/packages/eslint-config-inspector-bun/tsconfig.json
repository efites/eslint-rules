{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react-jsx",
		"lib": [
			"DOM",
			"ESNext"
		],
		"useDefineForClassFields": true,
		"rootDir": "src",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"types": [
			"node"
		],
		"allowImportingTsExtensions": true,
		"strict": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"global-env.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
